<div class="admin-title">
    <h2>Add New Post</h2>
</div>

<form action="/add-post" method="POST">

    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title">


    <label for="body"><b>content</b></label>
    <textarea name="body" cols="50" rows="10"></textarea>

    <label for="author"><b>Author</b></label>
    <input type="text" placeholder="Authorr Name" name="author">

      <!-- tags -->
      <span class="tags"     id="tagContainer">Tag</span> 
      <input type="text"     id="newTagInput"         placeholder="Enter a tag">

      <!-- state -->


  <label for="state"><b>State</b></label>
  <select name="state" id="state">
      <option value="published">Published</option>
      <option value="draft">Draft</option>
  </select>

  <!-- timestamp -->

  <label for="timestamp"><b>Timestamp</b></label>
  <input type="text" placeholder="Timestamp" name="timestamp">


  



    <input type="submit" value="Add" class="btn" >



</form>